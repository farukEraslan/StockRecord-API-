@model Product

@{
    ViewData["Title"] = "UrunEkle";
}

<div class="row">
    <div class="offset-3 col-lg-6">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Urun Ekle</strong>
            </div>
            <div class="card-body">
                <!-- Credit Card -->
                <div id="pay-invoice">
                    <form asp-area="Admin" asp-controller="Product" asp-action="UrunEkle" method="post">
                        <div class="form-group">
                            <label asp-for="ProductName" class="control-label mb-1">Urun Adı</label>
                            <input asp-for="ProductName" type="text" class="form-control">
                        </div>
                        <div class="form-group has-success">
                            <label asp-for="UnitPrice" class="control-label mb-1">Urun Adresi</label>
                            <input asp-for="UnitPrice" type="text" class="form-control">
                        </div>
                        <div class="form-group has-success">
                            <label asp-for="Stock" class="control-label mb-1">Urun Telefonu</label>
                            <input asp-for="Stock" type="text" class="form-control">
                        </div>
                        <div class="form-group has-success">
                            <label asp-for="ExpireDate" class="control-label mb-1">Urun Emaili</label>
                            <input asp-for="ExpireDate" type="text" class="form-control">
                        </div>
                        <div class="form-group has-success">
                            <label asp-for="CategoryId" class="control-label mb-1">Urun Emaili</label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.AktifKategoriler">

                                <option>Lütfen Seçim Yapınız...</option>

                            </select>
                        </div>
                        <div class="form-group has-success">
                            <label asp-for="SupplierId" class="control-label mb-1">Urun Emaili</label>
                             <select asp-for="SupplierId" asp-items="@ViewBag.AktifTedarikciler">

                                <option>Lütfen Seçim Yapınız...</option>

                            </select>
                        </div>
                        <div>
                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                <i class="fa fa-plus-square-o fa-lg"></i>&nbsp;
                                <span id="payment-button-amount">Urun Ekle</span>
                                <span id="payment-button-sending" style="display:none;">Ekleniyor…</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div> <!-- .card -->

</div><!--/.col-->
